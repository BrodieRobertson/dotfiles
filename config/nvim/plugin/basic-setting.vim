let mapleader=" "

" Use system clipboard
set clipboard+=unnamedplus

set mouse=a
syntax on
set ignorecase
set smartcase
set encoding=utf-8
set number relativenumber

" Tab Settings
"set expandtab
set shiftwidth=2
set softtabstop=2
set tabstop=2
set timeoutlen=300

set path=.,,**

" Autocompletion
set wildmode=longest,list,full

" Fix splitting
set splitbelow splitright

" Cursor line
set cursorline
set cursorcolumn

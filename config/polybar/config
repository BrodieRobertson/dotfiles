[colors]
background = ${xrdb:background}
background-wm = ${xrdb:color8}
background-alt = ${xrdb:color0}
foreground = ${xrdb:foreground}
foreground-alt = ${xrdb:color7}
primary = ${xrdb:color4}
alert = ${xrdb:color1}

[settings]
format-foreground =
format-underline = ${colors.primary}
format-background = ${colors.background-alt}
format-padding = 1
format-overline =
format-margin = 0
format-offset =
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0

[bar/bar]
monitor = ${env:MONITOR:DisplayPort-0}
monitor-fallback =
monitor-strict = false
monitor-exact = true
override-redirect = false
wm-restack = bspwm
enable-ipc = true
fixed-center = false
bottom = false
separator =

width = 100%
height = 32
offset-x = 0
offset-y = 0
radius = 0.0

underline-size = 3
overline-size = 0

background = ${colors.background}
foreground = ${colors.foreground}

module-margin-left = 0
module-margin-right = 1

font-0 = JetBrainsMonoMedium:pixelsize=10;
font-1 = HackNerdFont:pixelsize=10;
font-2 = NotoColorEmoji:fontformat=truetype:scale=10:antialias=false;
font-3 = IPAGothic:fontformat=truetype:pixelsize=10:antialias=false;

modules-left = bspwm xwindow
modules-right = crypto torrents pacman-packages cpu-usage cpu-temperature memory volume weather time

tray-position = right
tray-padding = 1
tray-background = ${colors.background-alt}
tray-offset-x = 0
tray-offset-y = 0
tray-scale = 1.0

cursor-click = pointer
cursor-scroll = default

[module/subs]
type = custom/script
exec = polysubs
interval = 300
click-left = $BROWSER https://studio.youtube.com &
click-right = chromium https://studio.youtube.com &

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

format-underline = ${colors.background}
format-background = ${colors.background}
format-padding =

[module/bspwm]
type = internal/bspwm

enable-scroll = true
label-focused = %name%
label-focused-background = ${colors.background-wm}
label-focused-underline = ${colors.primary}
label-focused-padding = 1

label-occupied = %name%
label-occupied-padding = 1

label-urgent = %name%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-empty = %name%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 1

format-underline = ${colors.background}
format-background = ${colors.background}
format-padding =
scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

; Separator in between workspaces
label-separator = |

[module/pacman-packages]
type = custom/ipc
hook-0 = sudo pacman -Qu | wc -l
format-prefix = "ðŸ“¦ "
click-left = updatepackages
initial = 1

[module/crypto]
type = custom/script
exec = echo ðŸ’°
interval = 0
click-left = $TERMINAL -e cointop &
click-right = notifycrypto

[module/torrents]
type = custom/script
exec = echo ðŸ“¥
click-left = $TERMINAL -e tremc &
click-right = notifytorrents
interval = 0

[module/memory]
type = custom/script
exec = i3memory
label = "%output%"
click-left = $TERMINAL -e htop &
interval = 10
format-prefix = "ðŸ§  "

[module/cpu-usage]
type = custom/script
exec = polycpu
label = "%output%"
click-left = $TERMINAL -e htop &
interval = 10
format-prefix = "ðŸ’» "

[module/cpu-temperature]
type = custom/script
exec = polytempamd
label = "%output%"
format-prefix="ðŸ”¥ "
interval = 10

[module/weather]
type = custom/script
exec = i3weather
label = "%output%"
click-left = $TERMINAL -e w3m wttr.in/Adelaide &
interval = 1800

[module/volume]
type = custom/ipc
hook-0 = polypulsevolume
click-left = $TERMINAL -e pulsemixer &
click-right = pulsevolctrl "output-mute" "alsa_output.pci-0000_0b_00.4.analog-stereo"
scroll-up = pulsevolctrl "output-vol" "alsa_output.pci-0000_0b_00.4.analog-stereo" +2%
scroll-down = pulsevolctrl "output-vol" "alsa_output.pci-0000_0b_00.4.analog-stereo" -2%
initial = 1

[module/time]
type = custom/script
exec = date '+%d/%m/%Y %H:%M:%S'
click-left = thunderbird &
label = "%output%"
interval = 5


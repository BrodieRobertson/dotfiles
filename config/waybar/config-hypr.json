      "unlocked": "ï‚œ"
    }
  },
  "wlr/window": {
    "tooltip": true
  },
  "tray": {
    // "icon-size": 21,
    "spacing": 10
  },
  "clock": {
    // "timezone": "America/New_York",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "format": "<span color='#ffffff'>{:%H:%M %d/%m/%Y}</span>",
    "on-click": "thunderbird"
  },
  "pulseaudio": {
    // "scroll-step": 1, // %, can be a float
